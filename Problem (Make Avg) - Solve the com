import java.util.Scanner;

class Codechef
{
	public static void main (String[] args)
	{
	    Scanner read = new Scanner(System.in);
	    int t = read.nextInt();
	    for(int i=0; i<t; i++){
	        int a= read.nextInt();
	        int c = read.nextInt();
	        int d=a+c;
	        if(d%2==0)
	        {
	            System.out.println((a+c)/2);
	        }
	        else{
	            System.out.println("-1");
	        }
	        // Use your sub-components below this line to solve the problem

	        
	    }
	}
}
